{
  "dashboard": {
    "id": null,
    "uid": "myriad-system",
    "title": "Myriad Cognitive Architecture - System Overview",
    "tags": ["myriad", "system", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "Query Rate (queries/sec)",
        "targets": [
          {
            "expr": "rate(orchestrator_queries_total[5m])",
            "legendFormat": "Query Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Queries/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "Query Duration (95th percentile)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(orchestrator_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 Duration",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(orchestrator_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p50 Duration",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "type": "graph",
        "title": "Active Agents",
        "targets": [
          {
            "expr": "orchestrator_active_agents",
            "legendFormat": "Active Agents",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Count" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "type": "graph",
        "title": "Task Success Rate",
        "targets": [
          {
            "expr": "rate(orchestrator_task_success_total[5m]) / (rate(orchestrator_task_success_total[5m]) + rate(orchestrator_task_failure_total[5m]))",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percentunit", "label": "Success Rate", "max": 1, "min": 0 },
          { "format": "short" }
        ]
      },
      {
        "id": 5,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "type": "graph",
        "title": "Neurogenesis - Dynamic Agents Created",
        "targets": [
          {
            "expr": "rate(orchestrator_neurogenesis_total[5m])",
            "legendFormat": "Agents Created/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Agents/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "type": "stat",
        "title": "Total Queries Processed",
        "targets": [
          {
            "expr": "orchestrator_queries_total",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      }
    ]
  }
}